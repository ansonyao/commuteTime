{
  "manifest_version": 2,

  "name": "How Far",
  "description": "Right click to check how far is it!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon_48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "contextMenus",
    "storage"
  ],
  "background": { 
      "scripts": ["script.js"]
  },
  "icons": { "16": "icon_16.png",
           "48": "icon_48.png",
          "128": "icon_128.png" }
}